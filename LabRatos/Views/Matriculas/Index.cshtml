@model IEnumerable<LabRatos.Models.Matricula>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudante)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curso.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estudante.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MatriculaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MatriculaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MatriculaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
